# A2A Notification System - Real Service Configuration
# Copy this file to .env and update the URLs to match your actual A2A services

# Agent Registry Service
A2A_REGISTRY_URL=http://localhost:8000
A2A_REGISTRY_WS=ws://localhost:8000/ws

# Blockchain Service  
BLOCKCHAIN_SERVICE_URL=http://localhost:8080/blockchain
BLOCKCHAIN_WS=ws://localhost:8080/blockchain/events

# Security Monitoring
SECURITY_API_URL=http://localhost:8001/security
SECURITY_EVENTS_URL=http://localhost:8001/security/events

# Metrics Service
METRICS_WS=ws://localhost:4004/ws/metrics

# Push Notifications (VAPID Keys)
# Generate with: npx web-push generate-vapid-keys
VAPID_PUBLIC_KEY=your-vapid-public-key-here
VAPID_PRIVATE_KEY=your-vapid-private-key-here
VAPID_SUBJECT=mailto:admin@your-domain.com

# Database Configuration
DB_TYPE=sqlite
DB_PATH=db/notifications.sqlite

# Notification Service Configuration
NODE_ENV=production
LOG_LEVEL=info

# Optional: Email Configuration for Notifications
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SECURITY_TEAM_EMAIL=security@your-domain.com

# Optional: Application Base URL for Push Notification Click Actions
APP_BASE_URL=https://your-domain.com