# A2A Network Environment Configuration Template
# Copy this file to .env and fill in your values
# NEVER commit .env files to version control

# ================================
# ENVIRONMENT SETTINGS
# ================================
NODE_ENV=development
LOG_LEVEL=debug
LOG_FORMAT=text
PORT=4004

# ================================
# AUTHENTICATION & SECURITY
# ================================
# SECURITY: Generate strong random secrets for production
# Use: openssl rand -base64 32
USE_DEVELOPMENT_AUTH=true
ALLOW_NON_BTP_AUTH=true
BTP_ENVIRONMENT=false

# Generate with: openssl rand -base64 32
JWT_SECRET=your-jwt-secret-here
SESSION_SECRET=your-session-secret-here

# Development API Keys (change for production)
VALID_API_KEYS=your-api-key-1,your-api-key-2

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:4004,http://localhost:8080

# ================================
# DATABASE CONFIGURATION
# ================================
DATABASE_TYPE=sqlite
SQLITE_DB_PATH=./data/a2a_development.db
SQLITE_JOURNAL_MODE=WAL
SQLITE_CONNECTION_POOL_SIZE=10

# HANA Configuration (production)
HANA_HOST=your-hana-host
HANA_PORT=30015
HANA_DATABASE=your-database
HANA_USER=your-username
HANA_PASSWORD=your-password
HANA_ENCRYPT=true

# ================================
# BLOCKCHAIN CONFIGURATION
# ================================
BLOCKCHAIN_RPC_URL=http://localhost:8545
CHAIN_ID=1337
BLOCKCHAIN_NETWORK_ID=1337
BLOCKCHAIN_NETWORK=development

# Contract addresses (deployed by setup)
AGENT_REGISTRY_ADDRESS=
MESSAGE_ROUTER_ADDRESS=
BUSINESS_DATA_CLOUD_ADDRESS=
SERVICE_MARKETPLACE_ADDRESS=
REPUTATION_CONTRACT_ADDRESS=

# Test wallet for development (use secure wallet for production)
DEFAULT_ACCOUNT=
CONTRACT_DEPLOYMENT_KEY=

# ================================
# AGENT ENDPOINTS
# ================================
AGENT_MANAGER_ENDPOINT=http://localhost:5001
# ... add other agent endpoints as needed

# ================================
# MONITORING & FEATURES
# ================================
ENABLE_BLOCKCHAIN=true
ENABLE_WEBSOCKET=true
ENABLE_CACHE=true
ENABLE_METRICS=true
METRICS_ENABLED=true

# Health check URLs
HEALTH_CHECK_URL=http://localhost:4004/health
UI_HEALTH_CHECK_URL=http://localhost:4004

# ================================
# EXTERNAL SERVICES
# ================================
# API Keys (obtain from respective services)
ALCHEMY_API_KEY=
ETHERSCAN_API_KEY=
INFURA_API_KEY=

# Redis configuration
REDIS_URL=redis://localhost:6379

# ================================
# DEVELOPMENT TOOLS
# ================================
WATCH_MODE=true
DEBUG=true