{
  "xsappname": "a2a-network",
  "tenant-mode": "dedicated",
  "description": "A2A Network - Enterprise Agent Coordination Platform",
  "scopes": [
    {
      "name": "$XSAPPNAME.Admin",
      "description": "Administrator access to A2A Network"
    },
    {
      "name": "$XSAPPNAME.Developer",
      "description": "Developer access to A2A Network APIs and tools"
    },
    {
      "name": "$XSAPPNAME.User",
      "description": "Standard user access to A2A Network"
    },
    {
      "name": "$XSAPPNAME.ServiceAccount",
      "description": "Service-to-service communication access"
    },
    {
      "name": "$XSAPPNAME.AgentManager",
      "description": "Agent lifecycle management permissions"
    },
    {
      "name": "$XSAPPNAME.WorkflowExecutor",
      "description": "Workflow execution and orchestration permissions"
    },
    {
      "name": "$XSAPPNAME.NetworkMonitor",
      "description": "Network monitoring and analytics access"
    }
  ],
  "attributes": [
    {
      "name": "Country",
      "description": "User's country for compliance and data residency",
      "valueType": "string"
    },
    {
      "name": "Department",
      "description": "User's organizational department",
      "valueType": "string"
    },
    {
      "name": "TenantId",
      "description": "Multi-tenant identifier",
      "valueType": "string"
    }
  ],
  "role-templates": [
    {
      "name": "A2AAdmin",
      "description": "A2A Network Administrator",
      "scope-references": [
        "$XSAPPNAME.Admin",
        "$XSAPPNAME.Developer",
        "$XSAPPNAME.User",
        "$XSAPPNAME.AgentManager",
        "$XSAPPNAME.WorkflowExecutor",
        "$XSAPPNAME.NetworkMonitor"
      ],
      "attribute-references": [
        "Country",
        "Department",
        "TenantId"
      ]
    },
    {
      "name": "A2ADeveloper",
      "description": "A2A Network Developer",
      "scope-references": [
        "$XSAPPNAME.Developer",
        "$XSAPPNAME.User",
        "$XSAPPNAME.AgentManager",
        "$XSAPPNAME.WorkflowExecutor"
      ],
      "attribute-references": [
        "Department",
        "TenantId"
      ]
    },
    {
      "name": "A2AUser",
      "description": "A2A Network Standard User",
      "scope-references": [
        "$XSAPPNAME.User"
      ],
      "attribute-references": [
        "TenantId"
      ]
    },
    {
      "name": "A2AServiceAccount",
      "description": "A2A Network Service Account",
      "scope-references": [
        "$XSAPPNAME.ServiceAccount"
      ],
      "attribute-references": [
        "TenantId"
      ]
    }
  ],
  "role-collections": [
    {
      "name": "A2A-Administrator",
      "description": "Full administrative access to A2A Network",
      "role-template-references": [
        "$XSAPPNAME.A2AAdmin"
      ]
    },
    {
      "name": "A2A-Developer",
      "description": "Developer access to A2A Network",
      "role-template-references": [
        "$XSAPPNAME.A2ADeveloper"
      ]
    },
    {
      "name": "A2A-User",
      "description": "Standard user access to A2A Network",
      "role-template-references": [
        "$XSAPPNAME.A2AUser"
      ]
    }
  ],
  "oauth2-configuration": {
    "token-validity": 7200,
    "refresh-token-validity": 86400,
    "redirect-uris": [
      "https://*.cfapps.sap.hana.ondemand.com/**",
      "https://*.hana.ondemand.com/**"
    ],
    "system-attributes": [
      "groups",
      "rolecollections"
    ],
    "autoapprove": true
  },
  "foreign-scope-references": [
    "uaa.user"
  ]
}