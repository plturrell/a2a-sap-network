# A2A Blockchain Configuration Template
# Copy this file to .env and fill in the appropriate values

# Blockchain Network Configuration
A2A_RPC_URL=http://localhost:8545
A2A_NETWORK=localhost
A2A_CHAIN_ID=31337

# Contract Addresses (deployed contracts)
A2A_AGENT_REGISTRY_ADDRESS=0x...
A2A_MESSAGE_ROUTER_ADDRESS=0x...
A2A_ORD_REGISTRY_ADDRESS=0x...

# Agent Private Keys (generate unique keys for each agent)
A2A_PRIVATE_KEY=0x...
QC_AGENT_PRIVATE_KEY=0x...
DM_AGENT_PRIVATE_KEY=0x...

# Contract ABI Path (optional, will auto-detect from foundry artifacts)
A2A_ABI_PATH=./out

# Blockchain Features
BLOCKCHAIN_ENABLED=true

# Agent Configuration
QC_AGENT_PORT=8009
DM_AGENT_PORT=8001

# Quality Control Manager Configuration
QC_AGENT_BASE_URL=http://localhost:8009
QC_AGENT_MANAGER_URL=http://localhost:8080

# Data Manager Configuration
DM_AGENT_BASE_URL=http://localhost:8001
DM_AGENT_MANAGER_URL=http://localhost:8080

# Database Configuration for Data Manager
STORAGE_BACKEND=sqlite
SQLITE_DB_PATH=./a2a_data.db
REDIS_URL=redis://localhost:6379
CACHE_TTL=3600

# PostgreSQL (optional)
POSTGRES_URL=postgresql://user:password@localhost:5432/a2a_data

# SAP HANA (optional)
HANA_HOST=localhost
HANA_PORT=30015
HANA_USER=SYSTEM
HANA_PASSWORD=password
HANA_DATABASE=A2A_DATA

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Performance
MAX_WORKERS=4
REQUEST_TIMEOUT=30

# Security
JWT_SECRET=your-jwt-secret-key
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# Monitoring
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090

# A2A Protocol Configuration
A2A_PROTOCOL_VERSION=0.2.9
A2A_AGENT_TIMEOUT=30
A2A_MAX_RETRIES=3

# Trust and Reputation
MIN_REPUTATION_THRESHOLD=30
TRUST_VERIFICATION_ENABLED=true
REPUTATION_DECAY_RATE=0.1

# Message Routing
MESSAGE_TTL=3600
MAX_MESSAGE_SIZE=1048576
MESSAGE_COMPRESSION=true

# Circuit Breaker
CIRCUIT_BREAKER_ENABLED=true
CIRCUIT_BREAKER_FAILURE_THRESHOLD=5
CIRCUIT_BREAKER_TIMEOUT=30