{
  "name": "@a2a/docs-platform",
  "version": "1.0.0",
  "description": "Interactive documentation platform for A2A Framework",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "concurrently \"npm run server:dev\" \"npm run client:dev\"",
    "server:dev": "nodemon server.js",
    "client:dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "deploy": "npm run build && docker build -t a2a/docs ."
  },
  "dependencies": {
    "express": "^4.18.2",
    "socket.io": "^4.7.2",
    "markdown-it": "^13.0.1",
    "prismjs": "^1.29.0",
    "katex": "^0.16.8",
    "monaco-editor": "^0.41.0",
    "ws": "^8.13.0",
    "yaml": "^2.3.2",
    "node-fetch": "^3.3.1"
  },
  "devDependencies": {
    "vite": "^4.4.9",
    "concurrently": "^8.2.0",
    "nodemon": "^3.0.1",
    "@types/express": "^4.17.17"
  }
}