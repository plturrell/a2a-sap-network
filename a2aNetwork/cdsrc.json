{
    "build": {
        "target": ".",
        "tasks": [
            {
                "for": "hana",
                "dest": "../db"
            },
            {
                "for": "node-cf",
                "src": "srv"
            }
        ]
    },
    "requires": {
        "db": {
            "kind": "hana-cloud",
            "model": ["db/", "srv/"]
        },
        "sqlite": {
            "kind": "sqlite",
            "credentials": {
                "database": "${SQLITE_DB_PATH:-./data/a2a_fallback.db}"
            }
        },
        "messaging": false,
        "multitenancy": false,
        "extensibility": false,
        "destinations": false,
        "connectivity": false,
        "html5-repo": false,
        "portal": false,
        "workflow": false,
        "approuter": false,
        "audit-log": false
    },
    "hana": {
        "deploy-format": "hdbtable"
    },
    "features": {
        "fiori_preview": true,
        "in_memory_cache": true,
        "serve_static": true
    },
    "odata": {
        "version": "v4",
        "containment": true,
        "flavors": ["x4", "w4"]
    },
    "fiori": {
        "preview": {
            "ui5": {
                "version": "latest"
            }
        }
    },
    "log": {
        "levels": {
            "blockchain": "info",
            "websocket": "info",
            "hana": "debug",
            "pool": "debug"
        }
    }
}