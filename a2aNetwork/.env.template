# A2A Network Environment Configuration Template
# Copy this file to .env and update with your actual values
# NEVER commit .env files with real secrets to version control

# =============================================================================
# ENVIRONMENT CONFIGURATION
# =============================================================================
NODE_ENV=development
API_VERSION=v1
PORT=4004
HOST=0.0.0.0

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# Database type: sqlite | postgresql | mongodb | hana
DB_TYPE=sqlite
DB_CONNECTION_STRING=sqlite:./db/a2a.db
DB_POOL_SIZE=10
DB_CONNECTION_TIMEOUT=30000
DB_HOST=localhost
DB_PORT=5432
DB_USER=a2a_user
DB_PASSWORD=YOUR_DB_PASSWORD_HERE
DB_NAME=a2a_network

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=YOUR_REDIS_PASSWORD_HERE
REDIS_DB=0

# =============================================================================
# MESSAGE QUEUE (RabbitMQ) CONFIGURATION
# =============================================================================
RABBITMQ_URL=amqp://localhost
MQ_PREFETCH=10
MQ_MESSAGE_EXPIRY=3600000
MQ_MAX_RETRIES=3

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================
# JWT secrets must be at least 32 characters long
JWT_SECRET=YOUR_JWT_SECRET_256_BITS_MINIMUM_32_CHARACTERS
JWT_REFRESH_SECRET=YOUR_JWT_REFRESH_SECRET_256_BITS_MINIMUM_32_CHARACTERS
ACCESS_TOKEN_EXPIRY=15m
REFRESH_TOKEN_EXPIRY=7d
SESSION_TIMEOUT=3600
MAX_CONCURRENT_SESSIONS=5

# bcrypt rounds (minimum 10 for production)
BCRYPT_ROUNDS=12

# Security headers and CORS
CORS_ORIGINS=*
REQUEST_SIGNING_SECRET=YOUR_PRODUCTION_REQUEST_SIGNING_SECRET
ENCRYPTION_KEY=YOUR_32_BYTE_ENCRYPTION_KEY_HERE
SALT_ROUNDS=12

# SAP BTP Authentication (if using SAP environment)
BTP_ENVIRONMENT=false
ENABLE_XSUAA_VALIDATION=false
ALLOW_NON_BTP_AUTH=true
XSUAA_SERVICE_URL=YOUR_BTP_XSUAA_URL

# =============================================================================
# RATE LIMITING & SECURITY
# =============================================================================
ENABLE_RATE_LIMITING=true
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# =============================================================================
# AI/CHAT CONFIGURATION
# =============================================================================
# Required for production AI features
GROK_API_KEY=YOUR_GROK_API_KEY_HERE
GROK_BASE_URL=https://api.openai.com/v1
GROK_MODEL=gpt-4
GROK_TEMPERATURE=0.7
GROK_MAX_TOKENS=1000

# =============================================================================
# WEBSOCKET CONFIGURATION
# =============================================================================
WS_PORT=8087
WS_HEARTBEAT_INTERVAL=30000
WS_MAX_PAYLOAD=1048576

# =============================================================================
# BLOCKCHAIN CONFIGURATION
# =============================================================================
ENABLE_BLOCKCHAIN=true
BLOCKCHAIN_RPC_URL=http://localhost:8545
BLOCKCHAIN_API_KEY=YOUR_BLOCKCHAIN_API_KEY_HERE
A2A_RPC_URL=http://localhost:8545
A2A_NETWORK=localhost
A2A_CHAIN_ID=31337
CHAIN_ID=31337

# Contract addresses (update these after deployment)
A2A_AGENT_REGISTRY_ADDRESS=0x5FbDB2315678afecb367f032d93F642f64180aa3
A2A_MESSAGE_ROUTER_ADDRESS=0xe7f1725E7734CE288F8367e1Bb143E90bb3F0512
AGENT_REGISTRY_ADDRESS=YOUR_AGENT_REGISTRY_CONTRACT_ADDRESS
MESSAGE_ROUTER_ADDRESS=YOUR_MESSAGE_ROUTER_CONTRACT_ADDRESS
SERVICE_MARKETPLACE_ADDRESS=YOUR_SERVICE_MARKETPLACE_CONTRACT_ADDRESS

# Private keys for development (NEVER use these in production)
# Generate new keys for production: openssl rand -hex 32
A2A_PRIVATE_KEY=YOUR_PRIVATE_KEY_HERE
QC_AGENT_PRIVATE_KEY=YOUR_QC_AGENT_PRIVATE_KEY_HERE
DM_AGENT_PRIVATE_KEY=YOUR_DM_AGENT_PRIVATE_KEY_HERE
DEFAULT_PRIVATE_KEY=YOUR_PRODUCTION_PRIVATE_KEY_HERE

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================
# A2A service URLs
A2A_SERVICE_URL=http://localhost:4004
A2A_BASE_URL=http://localhost:4004
A2A_AGENTS_PORT=8000
A2A_NETWORK_PORT=4004

# =============================================================================
# MONITORING & OBSERVABILITY
# =============================================================================
ENABLE_METRICS=true
METRICS_PORT=9090
LOG_LEVEL=info

# OpenTelemetry configuration
OTEL_EXPORTER_OTLP_TRACES_ENDPOINT=http://localhost:4318/v1/traces
OTEL_EXPORTER_OTLP_METRICS_ENDPOINT=http://localhost:4318/v1/metrics

# SAP Cloud ALM integration
SAP_CLOUD_ALM_ENDPOINT=YOUR_SAP_CLOUD_ALM_ENDPOINT
SAP_CLOUD_ALM_TOKEN=YOUR_SAP_CLOUD_ALM_TOKEN
SAP_CLOUD_ALM_ALERTS_ENDPOINT=YOUR_SAP_CLOUD_ALM_ALERTS_ENDPOINT
SAP_CLIENT=100
SAP_GRAPH_ENDPOINT=YOUR_SAP_GRAPH_ENDPOINT
SAP_GRAPH_TOKEN=YOUR_SAP_GRAPH_TOKEN

# Prometheus & Grafana
PROMETHEUS_ENABLED=true
GRAFANA_ENABLED=true
JAEGER_ENABLED=true
LOKI_ENABLED=true

# =============================================================================
# FEATURE FLAGS
# =============================================================================
ENABLE_CHAT=true
ENABLE_BLOCKCHAIN=true
ENABLE_ENCRYPTION=true
ENABLE_RATE_LIMITING=true
DEBUG_MODE=false
MAINTENANCE_MODE=false

# Specific agent features
AGENT_11_ENABLED=false

# =============================================================================
# PERFORMANCE & CACHING
# =============================================================================
CACHE_TTL=3600
MAX_CACHE_SIZE=1000
CONNECTION_POOL_SIZE=10
REQUEST_TIMEOUT=30000
MAX_CONNECTIONS=200

# =============================================================================
# NOTIFICATIONS & ALERTS
# =============================================================================
# Email configuration
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=YOUR_EMAIL_APP_PASSWORD
SECURITY_TEAM_EMAIL=security@your-domain.com
ALERT_EMAIL=alerts@a2a-network.com

# Slack integration
SLACK_WEBHOOK_URL=YOUR_SLACK_WEBHOOK_URL

# Push notifications (generate with: npx web-push generate-vapid-keys)
VAPID_PUBLIC_KEY=YOUR_VAPID_PUBLIC_KEY_HERE
VAPID_PRIVATE_KEY=YOUR_VAPID_PRIVATE_KEY_HERE
VAPID_SUBJECT=mailto:admin@your-domain.com

# =============================================================================
# BACKUP & DISASTER RECOVERY
# =============================================================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# =============================================================================
# SSL/TLS CONFIGURATION
# =============================================================================
SSL_CERT_PATH=/etc/nginx/certs/a2a-network.crt
SSL_KEY_PATH=/etc/nginx/private/a2a-network.key

# =============================================================================
# APPLICATION URLS
# =============================================================================
APP_BASE_URL=http://localhost:4004
APP_URL=http://localhost:4004
HEALTH_CHECK_URL=http://localhost:4004/health

# =============================================================================
# SAP BTP CONFIGURATION
# =============================================================================
BTP_SUBDOMAIN=YOUR_BTP_SUBDOMAIN
BTP_REGION=eu10
BTP_LANDSCAPE=eu10.hana.ondemand.com
CF_ORG=YOUR_CF_ORG
CF_SPACE=YOUR_CF_SPACE

# =============================================================================
# DEVELOPMENT/TESTING OVERRIDES
# =============================================================================
# Session secret for development (generate new for production)
SESSION_SECRET=YOUR_SESSION_SECRET_256_BITS_MINIMUM
ENABLE_CORS=true

# CDS Configuration
CDS_ENV=development

# Log forwarding
LOG_FORWARDING_ENDPOINT=YOUR_LOG_FORWARDING_ENDPOINT

# Disaster recovery
DR_REGION=YOUR_DR_REGION

# =============================================================================
# IMPORTANT NOTES:
# 1. Replace ALL placeholder values (YOUR_*_HERE) with actual values
# 2. Generate secure random keys for production:
#    - openssl rand -hex 32  (for 256-bit keys)
#    - openssl rand -base64 32  (for base64 encoded keys)
# 3. Never commit .env files with real secrets to version control
# 4. Use environment-specific files (.env.development, .env.production, etc.)
# 5. Consider using secret management tools for production (AWS Secrets Manager, etc.)
# =============================================================================