# A2A Network Development Environment Configuration
# Copy this file to .env for local development
# Safe defaults for development - no real secrets

# =============================================================================
# ENVIRONMENT CONFIGURATION
# =============================================================================
NODE_ENV=development
CDS_ENV=development
API_VERSION=v1
PORT=4004
HOST=0.0.0.0
LOG_LEVEL=debug

# =============================================================================
# DATABASE CONFIGURATION (Development)
# =============================================================================
DB_TYPE=sqlite
DB_CONNECTION_STRING=sqlite:./db/a2a_dev.db
DB_POOL_SIZE=5
DB_CONNECTION_TIMEOUT=30000

# =============================================================================
# REDIS CONFIGURATION (Development)
# =============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=1

# =============================================================================
# MESSAGE QUEUE CONFIGURATION (Development)
# =============================================================================
RABBITMQ_URL=amqp://localhost
MQ_PREFETCH=5
MQ_MESSAGE_EXPIRY=1800000
MQ_MAX_RETRIES=2

# =============================================================================
# AUTHENTICATION & SECURITY (Development - Safe Defaults)
# =============================================================================
# Development JWT secrets (NOT for production)
