<core:FragmentDefinition 
    xmlns="sap.m" 
    xmlns:core="sap.ui.core">
    
    <Dialog id="confirmationDialog"
           title="{i18n>confirmation}"
           contentWidth="90%"
           maxWidth="30rem"
           contentHeight="auto"
           class="a2a-tablet-dialog"
           type="Message"
           state="{/confirmationType}">
        
        <content>
            <VBox class="sapUiMediumMargin">
                <HBox alignItems="Center" class="sapUiSmallMarginBottom">
                    <core:Icon src="{/confirmationIcon}" 
                              size="2rem"
                              color="{/confirmationColor}"
                              class="sapUiMediumMarginEnd"/>
                    <VBox>
                        <Title text="{/confirmationTitle}" level="H3"/>
                        <Text text="{/confirmationMessage}" class="sapUiSmallMarginTop"/>
                    </VBox>
                </HBox>
                
                <!-- Warning details (conditional) -->
                <MessageStrip text="{/warningMessage}"
                            type="Warning"
                            showIcon="true"
                            visible="{/showWarning}"
                            class="sapUiSmallMarginBottom"/>
                
                <!-- Affected items list (conditional) -->
                <Panel headerText="{i18n>affectedItems}" 
                      visible="{/showAffectedItems}"
                      class="sapUiSmallMarginBottom">
                    <List items="{/affectedItems}">
                        <StandardListItem title="{name}" description="{description}"/>
                    </List>
                </Panel>
                
                <!-- Don't ask again option -->
                <CheckBox text="{i18n>dontAskAgain}"
                         selected="{/dontAskAgain}"
                         visible="{/showDontAsk}"
                         class="sapUiSmallMarginTop"/>
            </VBox>
        </content>
        
        <beginButton>
            <Button text="{/confirmButtonText}"
                   type="{/confirmButtonType}"
                   icon="{/confirmButtonIcon}"
                   press="onConfirmAction"/>
        </beginButton>
        
        <endButton>
            <Button text="{i18n>cancel}"
                   press="onConfirmCancel"/>
        </endButton>
    </Dialog>
</core:FragmentDefinition>