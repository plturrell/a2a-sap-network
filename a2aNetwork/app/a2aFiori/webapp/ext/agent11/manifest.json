{
    "_version": "1.60.0",
    "sap.app": {
        "id": "a2a.network.agent11",
        "type": "application",
        "i18n": "i18n/i18n.properties",
        "title": "{{agent11Title}}",
        "description": "{{agent11Description}}",
        "applicationVersion": {
            "version": "1.0.0"
        },
        "dataSources": {
            "mainService": {
                "uri": "https://a2a/agent11/v1/odata/",
                "type": "OData",
                "settings": {
                    "odataVersion": "4.0"
                }
            }
        }
    },
    "sap.ui5": {
        "dependencies": {
            "minUI5Version": "1.120.0",
            "libs": {
                "sap.fe.templates": {},
                "sap.f": {},
                "sap.m": {},
                "sap.ui.core": {},
                "sap.uxap": {},
                "sap.viz": {}
            }
        },
        "models": {
            "": {
                "dataSource": "mainService",
                "preload": true,
                "settings": {
                    "operationMode": "Server",
                    "autoExpandSelect": true,
                    "earlyRequests": true
                }
            },
            "@i18n": {
                "type": "sap.ui.model.resource.ResourceModel",
                "uri": "i18n/i18n.properties"
            }
        },
        "routing": {
            "routes": [
                {
                    "name": "ComplianceList",
                    "pattern": ":?query:",
                    "target": {
                        "type": "Component",
                        "name": "ComplianceList",
                        "options": {
                            "settings": {
                                "entitySet": "ComplianceTasks",
                                "variantManagement": "Page",
                                "initialLoad": true,
                                "controlConfiguration": {
                                    "@com.sap.vocabularies.UI.v1.LineItem": {
                                        "tableSettings": {
                                            "type": "ResponsiveTable",
                                            "selectionMode": "Multi"
                                        },
                                        "actions": {
                                            "RunCompliance": {
                                                "press": ".extension.a2a.network.agent11.ext.controller.ListReportExt.onRunCompliance",
                                                "visible": true,
                                                "enabled": true,
                                                "requiresSelection": true,
                                                "text": "Run Compliance Check"
                                            },
                                            "ConfigureRules": {
                                                "press": ".extension.a2a.network.agent11.ext.controller.ListReportExt.onConfigureRules",
                                                "visible": true,
                                                "enabled": true,
                                                "requiresSelection": false,
                                                "text": "Configure Rules"
                                            },
                                            "GenerateReport": {
                                                "press": ".extension.a2a.network.agent11.ext.controller.ListReportExt.onGenerateReport",
                                                "visible": true,
                                                "enabled": true,
                                                "requiresSelection": false,
                                                "text": "Generate Report"
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    }
                },
                {
                    "name": "ComplianceDetails",
                    "pattern": "ComplianceTasks({key}):?query:",
                    "target": {
                        "type": "Component",
                        "name": "ComplianceDetails",
                        "options": {
                            "settings": {
                                "entitySet": "ComplianceTasks",
                                "controlConfiguration": {
                                    "@com.sap.vocabularies.UI.v1.HeaderInfo": {
                                        "actions": {
                                            "ViewAudit": {
                                                "press": ".extension.a2a.network.agent11.ext.controller.ObjectPageExt.onViewAudit",
                                                "visible": true,
                                                "enabled": true,
                                                "text": "View Audit Trail"
                                            },
                                            "ExportComplianceReport": {
                                                "press": ".extension.a2a.network.agent11.ext.controller.ObjectPageExt.onExportComplianceReport",
                                                "visible": true,
                                                "enabled": true,
                                                "text": "Export Compliance Report"
                                            },
                                            "ScheduleCompliance": {
                                                "press": ".extension.a2a.network.agent11.ext.controller.ObjectPageExt.onScheduleCompliance",
                                                "visible": true,
                                                "enabled": true,
                                                "text": "Schedule Compliance Check"
                                            },
                                            "ReviewViolations": {
                                                "press": ".extension.a2a.network.agent11.ext.controller.ObjectPageExt.onReviewViolations",
                                                "visible": "{= ${violationCount} > 0 }",
                                                "enabled": true,
                                                "text": "Review Violations"
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            ]
        },
        "extends": {
            "extensions": {
                "sap.ui.controllerExtensions": {
                    "sap.fe.templates.ListReport.ListReportController": {
                        "controllerName": "a2a.network.agent11.ext.controller.ListReportExt"
                    },
                    "sap.fe.templates.ObjectPage.ObjectPageController": {
                        "controllerName": "a2a.network.agent11.ext.controller.ObjectPageExt"
                    }
                }
            }
        }
    },
    "sap.fiori": {
        "registrationIds": ["F0001A11"],
        "archeType": "transactional"
    },
    "sap.fe": {
        "template": "sap.fe.templates.ListReport.ObjectPage"
    },
    "sap.platform.cf": {
        "oAuthScopes": [
            "$XSAPPNAME.compliance.user",
            "$XSAPPNAME.compliance.admin"
        ]
    },
    "sap.security": {
        "headers": {
            "Content-Security-Policy": "default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline'; img-src 'self' data:; connect-src 'self' wss:; font-src 'self' data:;",
            "X-Content-Type-Options": "nosniff",
            "X-Frame-Options": "DENY",
            "X-XSS-Protection": "1; mode=block",
            "Strict-Transport-Security": "max-age=31536000; includeSubDomains",
            "Referrer-Policy": "strict-origin-when-cross-origin",
            "Permissions-Policy": "geolocation=(), microphone=(), camera=()"
        },
        "csrf": {
            "token": true
        },
        "cors": {
            "allowedOrigins": ["https://*.ondemand.com"],
            "allowedMethods": ["GET", "POST", "PUT", "DELETE"],
            "allowedHeaders": ["Content-Type", "Authorization", "X-CSRF-Token"],
            "exposeHeaders": ["X-CSRF-Token"],
            "maxAge": 3600
        }
    }
}