<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:form="sap.ui.layout.form">
    
    <Dialog
        id="createDataProductDialog"
        title="{i18n>title.createTask}"
        contentWidth="650px"
        contentHeight="500px"
        resizable="true"
        draggable="true">
        
        <content>
            <VBox class="sapUiMediumMargin">
                <form:SimpleForm
                    id="createDataProductForm"
                    editable="true"
                    layout="ResponsiveGridLayout"
                    labelSpanXL="3"
                    labelSpanL="3"
                    labelSpanM="3"
                    labelSpanS="12"
                    adjustLabelSpan="false"
                    emptySpanXL="4"
                    emptySpanL="4"
                    emptySpanM="4"
                    emptySpanS="0"
                    columnsXL="1"
                    columnsL="1"
                    columnsM="1"
                    singleContainerFullSize="false">
                    
                    <form:content>
                        <Label text="{i18n>dc.title}" required="true"/>
                        <Input id="dcTitle" value="{/title}" placeholder="Enter product title"/>
                        
                        <Label text="{i18n>dc.description}" required="true"/>
                        <TextArea id="dcDescription" value="{/description}" rows="3" placeholder="Enter detailed description"/>
                        
                        <Label text="{i18n>dc.creator}" required="true"/>
                        <Input id="dcCreator" value="{/creator}" placeholder="Creator name or organization"/>
                        
                        <Label text="{i18n>dc.type}" required="true"/>
                        <Select id="dcType" selectedKey="{/type}">
                            <items>
                                <core:Item key="dataset" text="{i18n>type.dataset}"/>
                                <core:Item key="collection" text="{i18n>type.collection}"/>
                                <core:Item key="image" text="{i18n>type.image}"/>
                                <core:Item key="text" text="{i18n>type.text}"/>
                                <core:Item key="software" text="{i18n>type.software}"/>
                                <core:Item key="service" text="{i18n>type.service}"/>
                                <core:Item key="event" text="{i18n>type.event}"/>
                                <core:Item key="physicalObject" text="{i18n>type.physicalObject}"/>
                            </items>
                        </Select>
                        
                        <Label text="{i18n>dc.format}"/>
                        <Input id="dcFormat" value="{/format}" placeholder="e.g., CSV, JSON, XML"/>
                        
                        <Label text="{i18n>dc.language}"/>
                        <ComboBox id="dcLanguage" selectedKey="{/language}">
                            <items>
                                <core:Item key="en" text="English"/>
                                <core:Item key="de" text="German"/>
                                <core:Item key="fr" text="French"/>
                                <core:Item key="es" text="Spanish"/>
                                <core:Item key="it" text="Italian"/>
                                <core:Item key="pt" text="Portuguese"/>
                                <core:Item key="zh" text="Chinese"/>
                                <core:Item key="ja" text="Japanese"/>
                            </items>
                        </ComboBox>
                        
                        <Label text="{i18n>dc.subject}"/>
                        <MultiInput id="dcSubject" tokens="{/subjectTokens}">
                            <tokens>
                                <Token key="{key}" text="{text}"/>
                            </tokens>
                        </MultiInput>
                        
                        <Label text="{i18n>dc.rights}"/>
                        <TextArea id="dcRights" value="{/rights}" rows="2" placeholder="Copyright and usage rights"/>
                    </form:content>
                </form:SimpleForm>
            </VBox>
        </content>
        
        <buttons>
            <Button text="{i18n>action.validateMetadata}" type="Ghost" press="onValidateNewProduct"/>
            <Button text="Create" type="Emphasized" press="onCreateProduct"/>
            <Button text="Cancel" press="onCancelCreate"/>
        </buttons>
    </Dialog>
</core:FragmentDefinition>