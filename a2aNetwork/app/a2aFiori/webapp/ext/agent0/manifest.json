{
    "id": "a2a.agent0",
    "type": "extension",
    "i18n": "i18n/i18n.properties",
    "name": "Agent 0 - Data Product Agent",
    "description": "Entry point agent for data product management with Dublin Core metadata",
    
    "extends": {
        "component": "a2a.Component",
        "extensions": {
            "sap.ui.controllerExtensions": {
                "sap.fe.templates.ListReport.ListReportController": {
                    "controllerName": "a2a.ext.agent0.controller.ListReportExt"
                },
                "sap.fe.templates.ObjectPage.ObjectPageController": {
                    "controllerName": "a2a.ext.agent0.controller.ObjectPageExt"
                }
            },
            "sap.ui.viewExtensions": {
                "sap.fe.templates.ListReport.ListReport": {
                    "ResponsiveTableColumnsExtension|DataProducts": {
                        "className": "sap.ui.core.Fragment",
                        "fragmentName": "a2a.ext.agent0.fragment.DataProductColumns",
                        "type": "XML"
                    }
                },
                "sap.fe.templates.ObjectPage.ObjectPage": {
                    "ReplaceFacet|DublinCoreMetadata": {
                        "className": "sap.ui.core.Fragment",
                        "fragmentName": "a2a.ext.agent0.fragment.DublinCoreMetadata",
                        "type": "XML"
                    },
                    "ReplaceFacet|DataLineage": {
                        "className": "sap.ui.core.Fragment",
                        "fragmentName": "a2a.ext.agent0.fragment.DataLineage",
                        "type": "XML"
                    },
                    "ReplaceFacet|QualityMetrics": {
                        "className": "sap.ui.core.Fragment",
                        "fragmentName": "a2a.ext.agent0.fragment.QualityMetrics",
                        "type": "XML"
                    }
                }
            }
        }
    },
    
    "contentDensities": {
        "compact": true,
        "cozy": true
    },
    
    "sap.app/settings": {
        "securityHeaders": {
            "X-Frame-Options": "DENY",
            "X-XSS-Protection": "1; mode=block",
            "X-Content-Type-Options": "nosniff",
            "Content-Security-Policy": "default-src 'self'; script-src 'self' 'unsafe-inline' https://sapui5.hana.ondemand.com; style-src 'self' 'unsafe-inline'; img-src 'self' data: https:; connect-src 'self' https://localhost:8000 wss://localhost:8000; font-src 'self' data:; frame-ancestors 'none'",
            "Strict-Transport-Security": "max-age=31536000; includeSubDomains; preload",
            "Referrer-Policy": "strict-origin-when-cross-origin",
            "Permissions-Policy": "geolocation=(), microphone=(), camera=()"
        }
    },
    
    "models": {
        "i18n": {
            "type": "sap.ui.model.resource.ResourceModel",
            "settings": {
                "bundleName": "a2a.ext.agent0.i18n.i18n"
            }
        }
    },
    
    "resources": {
        "css": [{
            "uri": "css/style.css"
        }]
    }
}