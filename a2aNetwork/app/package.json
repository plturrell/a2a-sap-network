{
  "name": "a2a-network-launchpad",
  "version": "1.0.0",
  "description": "Production-ready SAP Fiori Launchpad for A2A Network Management",
  "main": "production-launchpad-server.js",
  "scripts": {
    "start": "node production-launchpad-server.js",
    "dev": "NODE_ENV=development nodemon production-launchpad-server.js",
    "test": "npm run test:unit && npm run test:integration",
    "test:unit": "mocha test/unit/**/*.test.js --timeout 10000",
    "test:integration": "node test/run-integration-tests.js",
    "test:watch": "nodemon --exec 'npm test'",
    "lint": "eslint . --ext .js --ignore-path .gitignore",
    "health-check": "curl -f http://localhost:4004/health || exit 1",
    "validate-config": "node scripts/validate-config.js",
    "deploy:local": "npm install && npm run validate-config && npm start",
    "deploy:btp": "cf push -f manifest.yml",
    "metrics": "curl -s http://localhost:9090/metrics",
    "coverage": "nyc --reporter=html --reporter=text npm test"
  },
  "keywords": [
    "sap",
    "fiori",
    "launchpad",
    "a2a",
    "agents",
    "blockchain",
    "enterprise",
    "btp"
  ],
  "author": "A2A Network Team",
  "license": "MIT",
  "dependencies": {
    "@opentelemetry/api": "^1.7.0",
    "@opentelemetry/auto-instrumentations-node": "^0.40.0",
    "@opentelemetry/exporter-jaeger": "^1.17.0",
    "@opentelemetry/exporter-prometheus": "^0.44.0",
    "@opentelemetry/resources": "^1.17.0",
    "@opentelemetry/sdk-metrics": "^1.17.0",
    "@opentelemetry/sdk-node": "^0.45.0",
    "@opentelemetry/sdk-trace-node": "^1.17.0",
    "@opentelemetry/semantic-conventions": "^1.17.0",
    "@sap/hana-client": "^2.17.15",
    "bcrypt": "^5.1.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "express": "^4.21.2",
    "express-rate-limit": "^6.7.0",
    "express-validator": "^7.0.1",
    "helmet": "^7.0.0",
    "ioredis": "^5.3.2",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "sqlite3": "^5.1.7",
    "winston": "^3.10.0"
  },
  "devDependencies": {
    "@types/node": "^20.4.5",
    "chai": "^4.3.7",
    "eslint": "^8.45.0",
    "ioredis-mock": "^8.8.0",
    "mocha": "^10.2.0",
    "nodemon": "^3.0.1",
    "nyc": "^15.1.0",
    "sinon": "^15.2.0",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/a2a-network/launchpad.git"
  },
  "bugs": {
    "url": "https://github.com/a2a-network/launchpad/issues"
  },
  "homepage": "https://github.com/a2a-network/launchpad#readme",
  "nyc": {
    "exclude": [
      "test/**",
      "coverage/**",
      "node_modules/**"
    ],
    "reporter": [
      "text",
      "html"
    ],
    "check-coverage": true,
    "lines": 80,
    "functions": 80,
    "branches": 75,
    "statements": 80
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "es2021": true,
      "mocha": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
      "ecmaVersion": 12,
      "sourceType": "module"
    },
    "rules": {
      "no-console": "off",
      "no-unused-vars": [
        "error",
        {
          "argsIgnorePattern": "^_"
        }
      ],
      "prefer-const": "error",
      "no-var": "error"
    }
  },
  "sap": {
    "transport": {
      "target": "ZA2A_FIORI",
      "package": "$TMP",
      "description": "A2A Network Fiori Launchpad Transport",
      "layer": "CUSTOMER",
      "type": "WORKBENCH"
    },
    "build": {
      "sourceTemplate": "fiori-freestyle",
      "platforms": ["ABAP", "CF"],
      "destination": "a2a-btp-destination"
    },
    "deployment": {
      "cf": {
        "buildpack": "nodejs_buildpack",
        "memory": "512M",
        "instances": 2,
        "services": ["a2a-xsuaa", "a2a-hana", "a2a-logs", "a2a-autoscaler"]
      },
      "abap": {
        "package": "ZA2A_FIORI",
        "transport": "ZA2AK900001"
      }
    }
  }
}
