# A2A Platform Environment Configuration Template
# Copy this file to .env and fill in the values

# ===== BLOCKCHAIN CONFIGURATION =====
BLOCKCHAIN_URL=http://localhost:8545
A2A_CONTRACT_ADDRESS=0x...
A2A_PRIVATE_KEY=0x...

# ===== SECURITY CONFIGURATION =====
JWT_SECRET_KEY=your-secret-key-here
ENABLE_RATE_LIMITING=true
ENABLE_AUDIT_LOGGING=true

# ===== DATABASE CONFIGURATION =====
DATABASE_URL=sqlite:///a2a.db
# For PostgreSQL: DATABASE_URL=postgresql://user:pass@localhost:5432/a2a
# For HANA: DATABASE_URL=hana://user:pass@host:port/database

# ===== EVENT STREAMING =====
EVENT_STREAM_BATCH_SIZE=10
EVENT_STREAM_POLL_INTERVAL=1000

# ===== SERVICE URLS =====
AGENT_MANAGER_URL=http://localhost:8000
CATALOG_MANAGER_URL=http://localhost:8001
MONITORING_SERVICE_URL=http://localhost:9090
NETWORK_STATS_URL=http://localhost:8080
ANALYTICS_DB_URL=http://localhost:8086

# ===== WEBSOCKET CONFIGURATION =====
WEBSOCKET_ALLOWED_ORIGINS=http://localhost:4004,http://localhost:8080,https://*.sap.com

# ===== DEVELOPMENT SETTINGS =====
NODE_ENV=development
DEBUG_MODE=true
LOG_LEVEL=info

# ===== MCP SERVICES =====
A2A_SERVICES='[{"name": "reasoning", "address": "localhost", "port": 8100}]'