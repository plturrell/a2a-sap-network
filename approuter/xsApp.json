{
  "welcomeFile": "/index.html",
  "authenticationMethod": "route",
  "sessionTimeout": 30,
  "compression": {
    "minSize": 2048
  },
  "routes": [
    {
      "source": "^/api/(.*)$",
      "target": "$1",
      "destination": "backend",
      "authenticationType": "xsuaa",
      "csrfProtection": true,
      "scope": [
        "$XSAPPNAME.DataViewer",
        "$XSAPPNAME.AgentOperator",
        "$XSAPPNAME.Admin"
      ]
    },
    {
      "source": "^/api/v1/admin/(.*)$",
      "target": "v1/admin/$1",
      "destination": "backend",
      "authenticationType": "xsuaa",
      "csrfProtection": true,
      "scope": "$XSAPPNAME.Admin"
    },
    {
      "source": "^/api/v1/agents/(.*)$",
      "target": "v1/agents/$1",
      "destination": "backend",
      "authenticationType": "xsuaa",
      "csrfProtection": true,
      "scope": [
        "$XSAPPNAME.AgentOperator",
        "$XSAPPNAME.Admin"
      ]
    },
    {
      "source": "^/api/v1/data/(.*)$",
      "target": "v1/data/$1",
      "destination": "backend",
      "authenticationType": "xsuaa",
      "csrfProtection": true,
      "scope": [
        "$XSAPPNAME.DataViewer",
        "$XSAPPNAME.DataManager",
        "$XSAPPNAME.Admin"
      ]
    },
    {
      "source": "^/ws/(.*)$",
      "target": "$1",
      "destination": "backend",
      "authenticationType": "xsuaa",
      "csrfProtection": false
    },
    {
      "source": "^/health$",
      "target": "/health",
      "destination": "backend",
      "authenticationType": "none",
      "csrfProtection": false
    },
    {
      "source": "^/metrics$",
      "target": "/metrics",
      "destination": "backend",
      "authenticationType": "basic",
      "csrfProtection": false
    },
    {
      "source": "^/(.*)$",
      "target": "$1",
      "localDir": "resources",
      "authenticationType": "xsuaa",
      "cacheControl": "max-age=31536000, public"
    }
  ],
  "logout": {
    "logoutEndpoint": "/logout",
    "logoutPage": "/logout.html"
  },
  "securityHeaders": {
    "X-Frame-Options": "DENY",
    "X-Content-Type-Options": "nosniff",
    "X-XSS-Protection": "1; mode=block",
    "Strict-Transport-Security": "max-age=31536000; includeSubDomains",
    "Content-Security-Policy": "default-src 'self' https://sapui5.hana.ondemand.com; script-src 'self' 'unsafe-inline' https://sapui5.hana.ondemand.com; style-src 'self' 'unsafe-inline' https://sapui5.hana.ondemand.com; img-src 'self' data: https:; font-src 'self' https://sapui5.hana.ondemand.com;",
    "Referrer-Policy": "strict-origin-when-cross-origin",
    "Permissions-Policy": "geolocation=(), microphone=(), camera=()"
  },
  "errorPage": [
    {
      "status": [401, 403],
      "file": "./error-pages/401.html"
    },
    {
      "status": [404],
      "file": "./error-pages/404.html"
    },
    {
      "status": [500],
      "file": "./error-pages/500.html"
    }
  ]
}