# FinSight CIB ORD Registry - Staging Environment Configuration
# Generated: 2025-08-01

# Application Environment
ENVIRONMENT=staging
DEBUG=False
LOG_LEVEL=INFO

# API Configuration
API_HOST=0.0.0.0
API_PORT=8080
API_WORKERS=4

# HANA Cloud Database (Staging)
HANA_USERNAME=${HANA_STAGING_USERNAME}
HANA_PASSWORD=${HANA_STAGING_PASSWORD}
HANA_HOSTNAME=${HANA_STAGING_HOSTNAME}
HANA_PORT=${HANA_STAGING_PORT:-443}
HANA_ENCRYPT=true
HANA_SSL_VALIDATE_CERTIFICATE=true

# SQLite Configuration (Staging - Local Fallback)
SQLITE_DB_PATH=/app/data/a2a_staging.db
SQLITE_JOURNAL_MODE=WAL

# AI Enhancement APIs (Staging)
XAI_API_KEY=${XAI_STAGING_API_KEY}
XAI_BASE_URL=https://api.x.ai/v1
XAI_MODEL=grok-beta
XAI_TIMEOUT=30

PERPLEXITY_API_KEY=${PERPLEXITY_STAGING_API_KEY}
PERPLEXITY_BASE_URL=https://api.perplexity.ai
PERPLEXITY_MODEL=sonar-pro

# Security Configuration
SECRET_KEY=${STAGING_SECRET_KEY}
CORS_ORIGINS=["https://staging.finsight.ai","https://staging-admin.finsight.ai"]
ALLOWED_HOSTS=["staging-ord-registry.finsight.ai","localhost"]

# Monitoring and Health
HEALTH_CHECK_INTERVAL=60
METRICS_ENABLED=true
PROMETHEUS_PORT=9090

# Logging Configuration
LOG_FORMAT=json
LOG_FILE=/var/log/ord-registry/staging.log
MAX_LOG_SIZE=100MB
BACKUP_COUNT=5
