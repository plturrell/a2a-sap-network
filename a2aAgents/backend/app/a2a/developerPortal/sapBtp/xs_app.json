{
  "welcomeFile": "/index.html",
  "authenticationMethod": "route",
  "sessionTimeout": 30,
  "routes": [
    {
      "source": "^/api/(.*)$",
      "target": "/api/$1",
      "destination": "a2a-backend",
      "authenticationType": "xsuaa",
      "scope": "$XSAPPNAME.User"
    },
    {
      "source": "^/admin/(.*)$",
      "target": "/$1",
      "localDir": "resources",
      "authenticationType": "xsuaa",
      "scope": "$XSAPPNAME.Admin"
    },
    {
      "source": "^/user/(.*)$",
      "target": "/$1",
      "localDir": "resources",
      "authenticationType": "xsuaa",
      "scope": "$XSAPPNAME.User"
    },
    {
      "source": "^/static/(.*)$",
      "target": "/static/$1",
      "destination": "a2a-backend",
      "authenticationType": "none"
    },
    {
      "source": "^/resources/(.*)$",
      "target": "/resources/$1",
      "localDir": "resources",
      "authenticationType": "none"
    },
    {
      "source": "^/test/(.*)$",
      "target": "/test/$1",
      "localDir": "resources",
      "authenticationType": "xsuaa",
      "scope": "$XSAPPNAME.Developer"
    },
    {
      "source": "^/(.*)$",
      "target": "/$1",
      "localDir": "resources",
      "authenticationType": "xsuaa",
      "scope": "$XSAPPNAME.User"
    }
  ],
  "logout": {
    "logoutEndpoint": "/logout",
    "logoutPage": "/logout.html"
  },
  "compression": {
    "minSize": 2048
  },
  "whitelistService": {
    "endpoint": "/whitelist"
  },
  "websockets": {
    "enabled": true
  },
  "errorPage": [
    {
      "status": [400, 401, 403, 404, 500],
      "file": "./error.html"
    }
  ]
}
