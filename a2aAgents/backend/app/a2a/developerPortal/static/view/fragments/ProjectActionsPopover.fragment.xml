<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core">
    
    <Popover title="Project Actions" placement="Bottom" class="sapUiContentPadding">
        <content>
            <VBox>
                <Button 
                    text="Open Project" 
                    icon="sap-icon://open-folder"
                    type="Transparent"
                    press="onOpenProject"
                    class="sapUiTinyMarginBottom"/>
                
                <Button 
                    text="Clone Project" 
                    icon="sap-icon://copy"
                    type="Transparent"
                    press="onCloneProject"
                    class="sapUiTinyMarginBottom"/>
                
                <Button 
                    text="Export Project" 
                    icon="sap-icon://download"
                    type="Transparent"
                    press="onExportProject"
                    class="sapUiTinyMarginBottom"/>
                
                <Button 
                    text="Archive Project" 
                    icon="sap-icon://archive"
                    type="Transparent"
                    press="onArchiveProject"
                    class="sapUiTinyMarginBottom"/>
                
                <MenuButton 
                    text="Advanced Actions"
                    icon="sap-icon://action-settings"
                    type="Transparent"
                    class="sapUiTinyMarginBottom">
                    <menu>
                        <Menu>
                            <items>
                                <MenuItem 
                                    text="View Logs" 
                                    icon="sap-icon://log"
                                    press="onViewLogs"/>
                                <MenuItem 
                                    text="Performance Metrics" 
                                    icon="sap-icon://line-chart"
                                    press="onViewMetrics"/>
                                <MenuItem 
                                    text="Security Scan" 
                                    icon="sap-icon://shield"
                                    press="onSecurityScan"/>
                                <MenuItem 
                                    text="Backup Project" 
                                    icon="sap-icon://save"
                                    press="onBackupProject"/>
                            </items>
                        </Menu>
                    </menu>
                </MenuButton>
                
                <Button 
                    text="Delete Project" 
                    icon="sap-icon://delete"
                    type="Reject"
                    press="onDeleteProject"/>
            </VBox>
        </content>
    </Popover>
</core:FragmentDefinition>
