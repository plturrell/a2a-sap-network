<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.ui.layout.form">
    
    <Dialog
        title="Register A2A Network Agent"
        contentWidth="90%"
        maxWidth="35rem"
        class="a2a-tablet-dialog">
        
        <content>
            <f:SimpleForm
                editable="true"
                layout="ResponsiveGridLayout"
                labelSpanXL="4"
                labelSpanL="4"
                labelSpanM="4"
                labelSpanS="12"
                adjustLabelSpan="false"
                emptySpanXL="0"
                emptySpanL="0"
                emptySpanM="0"
                emptySpanS="0"
                columnsXL="1"
                columnsL="1"
                columnsM="1">
                
                <f:content>
                    <Label text="Agent Name" required="true" />
                    <Input 
                        value="{newAgent>/name}"
                        placeholder="Enter agent name"
                        valueLiveUpdate="true" />
                    
                    <Label text="Description" required="true" />
                    <TextArea
                        value="{newAgent>/description}"
                        rows="3"
                        placeholder="Describe what your agent does"
                        valueLiveUpdate="true" />
                    
                    <Label text="Endpoint URL" required="true" />
                    <Input
                        value="{newAgent>/endpoint}"
                        type="Url"
                        placeholder="https://your-agent.com/api"
                        valueLiveUpdate="true" />
                    
                    <Label text="Capabilities" />
                    <VBox>
                        <CheckBox
                            text="Messaging"
                            selected="{newAgent>/capabilities/messaging}" />
                        <CheckBox
                            text="Workflow Processing"
                            selected="{newAgent>/capabilities/workflow}" />
                        <CheckBox
                            text="Analytics"
                            selected="{newAgent>/capabilities/analytics}" />
                        <CheckBox
                            text="AI/ML Processing"
                            selected="{newAgent>/capabilities/ai}" />
                    </VBox>
                </f:content>
            </f:SimpleForm>
        </content>
        
        <beginButton>
            <Button
                text="Register"
                type="Emphasized"
                press=".onRegisterAgentConfirm" />
        </beginButton>
        
        <endButton>
            <Button
                text="Cancel"
                press=".onRegisterAgentCancel" />
        </endButton>
    </Dialog>
</core:FragmentDefinition>