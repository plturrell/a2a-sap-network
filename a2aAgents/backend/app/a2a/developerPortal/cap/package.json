{
  "name": "sap-a2a-developer-portal",
  "version": "2.1.0",
  "description": "SAP A2A Enterprise Developer Portal - Multi-Agent Business Process Platform",
  "repository": "<Add your repository here>",
  "license": "SAP DEVELOPER LICENSE",
  "private": true,
  "dependencies": {
    "@cap-js/hana": "^1.0.0",
    "@cap-js/sqlite": "^1.0.0",
    "@sap-cloud-sdk/http-client": "^3.0.0",
    "@sap-cloud-sdk/connectivity": "^3.0.0",
    "@sap-cloud-sdk/resilience": "^3.0.0",
    "@sap-cloud-sdk/util": "^3.0.0",
    "@sap/cds": "^7.3.0",
    "@sap/cds-compiler": "^4.3.0",
    "@sap/cds-dk": "^7.3.0",
    "@sap/cds-hana": "^2.0.0",
    "@sap/cds-mtxs": "^1.0.0",
    "@sap/audit-logging": "^5.6.0",
    "@sap/hana-client": "^2.17.0",
    "@sap/xssec": "^3.2.17",
    "@sap/xsenv": "^4.0.0",
    "@sap/instance-manager": "^4.0.0",
    "@sap/approuter": "^14.3.0",
    "@sap/logging": "^7.0.1",
    "@sap-cloud-sdk/openapi": "^3.0.0",
    "@sap-cloud-sdk/core": "^1.54.2",
    "@opentelemetry/api": "^1.4.1",
    "@opentelemetry/sdk-node": "^0.40.0",
    "@opentelemetry/auto-instrumentations-node": "^0.37.1",
    "@opentelemetry/exporter-trace-otlp-http": "^0.40.0",
    "@opentelemetry/instrumentation-express": "^0.33.0",
    "@opentelemetry/instrumentation-http": "^0.40.0",
    "@opentelemetry/instrumentation-redis-4": "^0.35.0",
    "express": "^4.18.2",
    "helmet": "^7.0.0",
    "cors": "^2.8.5",
    "compression": "^1.7.4",
    "passport": "^0.6.0",
    "uuid": "^9.0.0",
    "joi": "^17.9.2",
    "axios": "^1.4.0",
    "ws": "^8.13.0",
    "prom-client": "^14.2.0",
    "swagger-ui-express": "^5.0.0",
    "yamljs": "^0.3.0",
    "express-rate-limit": "^6.10.0",
    "redis": "^4.6.7",
    "@sap-cloud-sdk/vdm-business-partner-service": "^3.0.0",
    "@sap-cloud-sdk/vdm-sales-order-service": "^3.0.0"
  },
  "devDependencies": {
    "@cap-js/cds-types": "^0.2.0",
    "@sap/cds-lsp": "^7.3.0",
    "@sap/eslint-plugin-ui5-jsdocs": "^2.0.8",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.45.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.6.1",
    "prettier": "^3.0.0",
    "typescript": "^5.1.6",
    "chai": "^4.3.7",
    "chai-as-promised": "^7.1.1",
    "chai-subset": "^1.6.0",
    "mocha": "^10.2.0",
    "nyc": "^15.1.0",
    "sqlite3": "^5.1.6"
  },
  "scripts": {
    "start": "cds-serve",
    "watch-a2a": "cds watch --open a2a/index.html?sap-ui-xx-viewCache=false",
    "undeploy": "cf undeploy sap-a2a-developer-portal --delete-services --delete-service-keys --delete-service-brokers",
    "build": "rimraf resources mta_archives && mbt build --mtar archive",
    "deploy": "cf deploy mta_archives/archive.mtar --retries 1",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "type-check": "tsc --noEmit",
    "audit": "npm audit --audit-level moderate"
  },
  "engines": {
    "node": ">=18"
  },
  "cds": {
    "requires": {
      "API_BUSINESS_PARTNER": {
        "kind": "odata-v2",
        "model": "@sap/cloud-sdk-vdm-business-partner-service"
      },
      "API_SALES_ORDER_SRV": {
        "kind": "odata-v2",
        "model": "@sap/cloud-sdk-vdm-sales-order-service"
      },
      "[production]": {
        "db": "hana",
        "auth": "xsuaa"
      },
      "[development]": {
        "auth": {
          "kind": "mocked",
          "users": {
            "alice": {
              "password": "alice",
              "roles": [ "authenticated-user", "SAP_A2A_Developer" ]
            },
            "bob": {
              "password": "bob", 
              "roles": [ "authenticated-user", "SAP_A2A_BusinessUser" ]
            },
            "admin": {
              "password": "admin",
              "roles": [ "authenticated-user", "SAP_A2A_Administrator" ]
            }
          }
        }
      }
    },
    "hana": {
      "deploy-format": "hdbtable"
    },
    "build": {
      "target": "gen",
      "tasks": [
        {
          "for": "hana",
          "dest": "../db"
        },
        {
          "for": "node-js",
          "dest": "../srv"
        }
      ]
    },
    "odata": {
      "version": "v4"
    }
  },
  "sapux": [
    "app/a2a.portal"
  ]
}