<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.ui.layout.form">
    
    <Dialog
        title="A2A Network Settings"
        contentWidth="90%"
        maxWidth="35rem"
        class="a2a-tablet-dialog">
        
        <content>
            <MessageStrip
                text="Warning: Changing network settings will reconnect to the blockchain"
                type="Warning"
                showIcon="true"
                class="sapUiSmallMarginBottom" />
            
            <f:SimpleForm
                editable="true"
                layout="ResponsiveGridLayout">
                
                <f:content>
                    <Label text="Network:" />
                    <Select
                        selectedKey="{settings>/network}"
                        width="100%">
                        <items>
                            <core:Item key="mainnet" text="Mainnet" />
                            <core:Item key="testnet" text="Testnet (Sepolia)" />
                            <core:Item key="local" text="Local Development" />
                        </items>
                    </Select>
                    
                    <Label text="Private Key:" />
                    <Input
                        value="{settings>/privateKey}"
                        type="Password"
                        placeholder="Your wallet private key (optional)"
                        valueLiveUpdate="true" />
                    
                    <Label text="Custom RPC URL:" />
                    <Input
                        value="{settings>/rpcUrl}"
                        type="Url"
                        placeholder="https://your-rpc-endpoint.com (optional)"
                        valueLiveUpdate="true" />
                </f:content>
            </f:SimpleForm>
            
            <MessageStrip
                text="Note: Private key is stored locally in your browser"
                type="Information"
                showIcon="true"
                class="sapUiSmallMarginTop" />
        </content>
        
        <beginButton>
            <Button
                text="Save & Connect"
                type="Emphasized"
                press=".onSaveNetworkSettings" />
        </beginButton>
        
        <endButton>
            <Button
                text="Cancel"
                press=".onCancelNetworkSettings" />
        </endButton>
    </Dialog>
</core:FragmentDefinition>