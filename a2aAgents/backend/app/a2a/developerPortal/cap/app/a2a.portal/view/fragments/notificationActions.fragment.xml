<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core">
    
    <!-- Notification Action Buttons -->
    <HBox items="{notifications>actions}" class="sapUiTinyMarginTop">
        <Button text="{notifications>label}"
                type="{
                    path: 'notifications>style',
                    formatter: '.formatActionButtonType'
                }"
                press="onNotificationActionPress"
                class="sapUiTinyMarginEnd"
                customData:actionType="{notifications>action_type}"
                customData:target="{notifications>target}"
                customData:actionId="{notifications>id}"/>
    </HBox>
</core:FragmentDefinition>
