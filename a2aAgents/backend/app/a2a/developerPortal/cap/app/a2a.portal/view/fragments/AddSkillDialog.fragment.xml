<Dialog 
    xmlns="sap.m"
    title="Add Skill"
    contentWidth="90%"
    maxWidth="35rem"
    contentHeight="auto"
    class="a2a-tablet-dialog"
    resizable="true"
    draggable="true">
    <content>
        <VBox class="sapUiSmallMargin">
            <Label text="Skill Name:" required="true" />
            <Input id="skillName" placeholder="Enter skill name" width="100%" />
            
            <Label text="Description:" class="sapUiSmallMarginTop" />
            <TextArea id="skillDescription" rows="3" width="100%" placeholder="Describe what this skill does" />
            
            <Label text="Skill Type:" class="sapUiSmallMarginTop" />
            <Select id="skillType" width="100%">
                <core:Item xmlns:core="sap.ui.core" key="processing" text="Data Processing" />
                <core:Item xmlns:core="sap.ui.core" key="validation" text="Data Validation" />
                <core:Item xmlns:core="sap.ui.core" key="transformation" text="Data Transformation" />
                <core:Item xmlns:core="sap.ui.core" key="integration" text="System Integration" />
                <core:Item xmlns:core="sap.ui.core" key="analysis" text="Data Analysis" />
                <core:Item xmlns:core="sap.ui.core" key="notification" text="Notification" />
                <core:Item xmlns:core="sap.ui.core" key="custom" text="Custom" />
            </Select>
            
            <Label text="Icon:" class="sapUiSmallMarginTop" />
            <ComboBox id="skillIcon" placeholder="Select an icon" width="100%">
                <core:Item xmlns:core="sap.ui.core" key="sap-icon://process" text="Process" />
                <core:Item xmlns:core="sap.ui.core" key="sap-icon://validate" text="Validate" />
                <core:Item xmlns:core="sap.ui.core" key="sap-icon://refresh" text="Transform" />
                <core:Item xmlns:core="sap.ui.core" key="sap-icon://connected" text="Connect" />
                <core:Item xmlns:core="sap.ui.core" key="sap-icon://chart" text="Analyze" />
                <core:Item xmlns:core="sap.ui.core" key="sap-icon://bell" text="Notify" />
                <core:Item xmlns:core="sap.ui.core" key="sap-icon://settings" text="Configure" />
            </ComboBox>
            
            <CheckBox id="skillRequired" text="Required skill" class="sapUiSmallMarginTop" />
            <CheckBox id="skillAsync" text="Asynchronous execution" />
        </VBox>
    </content>
    <beginButton>
        <Button text="Add" type="Emphasized" press=".onAddSkillConfirm" />
    </beginButton>
    <endButton>
        <Button text="Cancel" press=".onAddSkillCancel" />
    </endButton>
</Dialog>