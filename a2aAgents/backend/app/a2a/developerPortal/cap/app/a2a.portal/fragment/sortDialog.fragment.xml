<core:FragmentDefinition 
    xmlns="sap.m" 
    xmlns:core="sap.ui.core">
    
    <ViewSettingsDialog id="sortDialog"
                       title="{i18n>sortProjects}"
                       confirm="onSortConfirm">
        
        <sortItems>
            <ViewSettingsItem text="{i18n>name}"
                            key="name"
                            selected="false"/>
            <ViewSettingsItem text="{i18n>lastModified}"
                            key="last_modified"
                            selected="true"/>
            <ViewSettingsItem text="{i18n>created}"
                            key="created"
                            selected="false"/>
            <ViewSettingsItem text="{i18n>status}"
                            key="status"
                            selected="false"/>
            <ViewSettingsItem text="{i18n>numberOfAgents}"
                            key="agentCount"
                            selected="false"/>
        </sortItems>
    </ViewSettingsDialog>
</core:FragmentDefinition>