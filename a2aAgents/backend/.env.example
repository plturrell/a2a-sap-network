# A2A Agents Environment Configuration Template
# Copy this file to .env and update with your values

# Environment
NODE_ENV=development
PORT=8080

# HANA Database Configuration
HANA_HOST=${HANA_HOST:-localhost}
HANA_PORT=${HANA_PORT:-30015}
HANA_USER=SYSTEM
HANA_PASSWORD=YourHanaPassword
HANA_DATABASE=A2A
HANA_SCHEMA=A2A_AGENTS
HANA_ENCRYPT=false

# Authentication Configuration
BYPASS_AUTH=true
XSUAA_URL=${XSUAA_URL:-http://localhost:8080/uaa}
XSUAA_CLIENT_ID=local-client
XSUAA_CLIENT_SECRET=local-secret
XSUAA_XSAPPNAME=a2a-agents-local

# Redis Cache Configuration
REDIS_HOST=${REDIS_HOST:-localhost}
REDIS_PORT=${REDIS_PORT:-6379}
# REDIS_PASSWORD=

# Service URLs
A2A_BASE_URL=${A2A_BASE_URL:-http://localhost:8000}
A2A_FRONTEND_URL=${A2A_FRONTEND_URL:-http://localhost:3000}
A2A_GATEWAY_URL=${A2A_GATEWAY_URL:-http://localhost:8080}
DATA_MANAGER_URL=${DATA_MANAGER_URL:-http://localhost:8001}
CATALOG_MANAGER_URL=${CATALOG_MANAGER_URL:-http://localhost:8002}
AGENT_MANAGER_URL=${AGENT_MANAGER_URL:-http://localhost:8003}

# CORS Configuration
CORS_ORIGINS=${CORS_ORIGINS:-http://localhost:3000,http://localhost:8080,http://127.0.0.1:3000}

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Blockchain Configuration
A2A_RPC_URL=${A2A_RPC_URL:-http://localhost:8545}
BLOCKCHAIN_RPC_URL=${BLOCKCHAIN_RPC_URL:-http://localhost:8545}
A2A_AGENT_PRIVATE_KEY=
A2A_AGENT_REGISTRY_ADDRESS=0x5FbDB2315678afecb367f032d93F642f64180aa3
A2A_MESSAGE_ROUTER_ADDRESS=0xe7f1725E7734CE288F8367e1Bb143E90bb3F0512
A2A_ORD_REGISTRY_ADDRESS=
A2A_NETWORK=31337
# A2A_BLOCKCHAIN_URL=http://localhost:8545  # Alternative URL config

# API Keys (Optional)
# OPENAI_API_KEY=
# ANTHROPIC_API_KEY=

# Performance Settings
MAX_CONCURRENT_REQUESTS=100
REQUEST_TIMEOUT_MS=30000

# Feature Flags
ENABLE_METRICS=true
ENABLE_TRACING=false
ENABLE_CACHE=true

# Monitoring and Infrastructure
PROMETHEUS_HOST=${PROMETHEUS_HOST:-prometheus}
PROMETHEUS_PORT=${PROMETHEUS_PORT:-9090}
NODE_EXPORTER_HOST=${NODE_EXPORTER_HOST:-node-exporter}
NODE_EXPORTER_PORT=${NODE_EXPORTER_PORT:-9100}

# Domain Configuration
SERVER_NAME=${SERVER_NAME:-localhost}
DOMAIN_NAME=${DOMAIN_NAME:-a2a.local}

# Testing Configuration
TEST_BASE_URL=${TEST_BASE_URL:-http://localhost:8080}

# Note: In BTP deployment, these values are automatically loaded from service bindings