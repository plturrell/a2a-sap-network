    "redis": "^4.6.0",
    "web3": "^4.0.0",
    "winston": "^3.8.0",
    "dotenv": "^16.0.0",
    "cors": "^2.8.5",
    "helmet": "^6.0.0",
    "rate-limiter-flexible": "^2.4.0",
    "prometheus-client": "^14.0.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.0",
    "jest": "^29.0.0",
    "supertest": "^6.3.0",
    "@types/jest": "^29.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "a2a",
