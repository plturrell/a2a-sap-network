{
  "name": "a2a-agents-full",
  "version": "1.0.0",
  "description": "A2A Agents - Full implementation for local and BTP deployment",
  "main": "launchA2aSystem.js",
  "scripts": {
    "start": "node launchA2aSystem.js",
    "dev": "nodemon launchA2aSystem.js",
    "start:minimal": "node srv/server-minimal.js",
    "build": "echo 'Build step for full A2A system'",
    "test": "npm run test:unit && npm run test:integration",
    "test:unit": "jest test/unit/",
    "test:integration": "jest test/integration/",
    "deploy:local": "./deploy-local.sh",
    "deploy:btp": "./deploy-btp.sh",
    "validate": "node scripts/validateConfig.js",
