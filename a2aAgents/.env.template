# A2A Agent Configuration Template
# Copy this file to .env and update with your values

# Base Configuration
A2A_BASE_URL=http://localhost:8000
AGENT_NETWORK_URL=http://localhost:8000
DATA_MANAGER_URL=http://localhost:8001
CATALOG_MANAGER_URL=http://localhost:8002
AGENT_MANAGER_URL=http://localhost:8003
QA_VALIDATION_URL=http://localhost:8007

# Storage Configuration
A2A_STORAGE_PATH=/var/lib/a2a/storage

# Blockchain Configuration
BLOCKCHAIN_NETWORK=mainnet
BLOCKCHAIN_RPC_URL=https://mainnet.infura.io/v3/YOUR-PROJECT-ID

# Contract Addresses (Replace with actual deployed addresses)
CONTRACT_AGENT_MANAGER=0x0000000000000000000000000000000000000000
CONTRACT_DATA_PRODUCT=0x0000000000000000000000000000000000000000
CONTRACT_DATA_STANDARDIZATION=0x0000000000000000000000000000000000000000
CONTRACT_AI_PREPARATION=0x0000000000000000000000000000000000000000
CONTRACT_VECTOR_PROCESSING=0x0000000000000000000000000000000000000000
CONTRACT_CALC_VALIDATION=0x0000000000000000000000000000000000000000
CONTRACT_QA_VALIDATION=0x0000000000000000000000000000000000000000
CONTRACT_DATA_MANAGER=0x0000000000000000000000000000000000000000
CONTRACT_CATALOG_MANAGER=0x0000000000000000000000000000000000000000
CONTRACT_AGENT_BUILDER=0x0000000000000000000000000000000000000000
CONTRACT_ENHANCED_CALCULATION=0x0000000000000000000000000000000000000000
CONTRACT_REASONING=0x0000000000000000000000000000000000000000
CONTRACT_SQL_AGENT=0x0000000000000000000000000000000000000000
CONTRACT_DEVELOPER_PORTAL=0x0000000000000000000000000000000000000000
CONTRACT_TRUST_REGISTRY=0x0000000000000000000000000000000000000000
CONTRACT_REPUTATION_EXCHANGE=0x0000000000000000000000000000000000000000

# Performance Configuration
EMBEDDING_DIMENSIONS=768
MAX_BATCH_SIZE=100
REQUEST_TIMEOUT=30

# Security Configuration
ENABLE_SSL=true
CORS_ALLOWED_ORIGINS=https://app.a2a.network,https://api.a2a.network

# Redis Configuration (for Context Engineering Agent)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/a2a
HANA_URL=hana://user:password@localhost:30015/A2A

# Monitoring Configuration
PROMETHEUS_ENDPOINT=http://localhost:9090
GRAFANA_ENDPOINT=http://localhost:3000
ENABLE_METRICS=true

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE_PATH=/var/log/a2a/agents.log