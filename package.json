{
  "name": "a2a-sap-network",
  "version": "1.0.0",
  "description": "A2A (Agent-to-Agent) Developer Portal - Enterprise SAP CAP application for AI agent management and workflow automation",
  "main": "index.js",
  "scripts": {
    "test": "npm run test:cap && npm run test:blockchain && npm run test:python",
    "test:cap": "cd a2a-agents/backend/app/a2a/developer_portal/cap && npm test",
    "test:blockchain": "cd a2a-network && npm test",
    "test:python": "python -m pytest a2a-agents/ -v",
    "test:integration": "cd a2a-network && npm run test:integration",
    "build": "npm run build:cap && npm run build:blockchain",
    "build:cap": "cd a2a-agents/backend/app/a2a/developer_portal/cap && npm run build",
    "build:blockchain": "cd a2a-network && forge build",
    "lint": "npm run lint:js && npm run lint:python",
    "lint:js": "eslint . --ext .js,.ts --ignore-path .gitignore",
    "lint:python": "find . -name '*.py' -not -path './venv/*' -not -path './.venv/*' | xargs pylint",
    "security": "npm audit && safety check",
    "start:portal": "cd a2a-agents/backend/app/a2a/developer_portal/static && python3 -m http.server 8000",
    "start:cap": "cd a2a-agents/backend/app/a2a/developer_portal/cap && cds run",
    "deploy:staging": "cf push a2a-portal-staging",
    "deploy:production": "cf push a2a-portal-production"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/plturrell/a2a-sap-network.git"
  },
  "keywords": [
    "sap",
    "cap",
    "ui5",
    "fiori",
    "blockchain",
    "agents",
    "ai",
    "automation",
    "enterprise"
  ],
  "author": "A2A Development Team",
  "license": "MIT",
  "devDependencies": {
    "eslint": "^8.55.0",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "prettier": "^3.1.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.py": [
      "black",
      "flake8"
    ]
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
