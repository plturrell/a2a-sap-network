{
  "name": "a2a-sap-network",
  "version": "1.0.0",
  "description": "A2A (Agent-to-Agent) Developer Portal - Enterprise SAP CAP application for AI agent management and workflow automation",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "test:unit": "jest --selectProjects=\"Unit Tests\"",
    "test:integration": "jest --selectProjects=\"Integration Tests\"",
    "test:e2e": "cypress run",
    "test:e2e:open": "cypress open",
    "test:contracts": "jest --selectProjects=\"Contract Tests\"",
    "test:performance": "jest tests/performance --testTimeout=120000",
    "test:security": "jest tests/security",
    "test:accessibility": "jest tests/accessibility",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "test:python": "cd tests && python -m pytest unit/a2aAgents integration/a2aAgents -v",
    "build": "npm run build:blockchain",
    "build:cap": "echo 'CAP build - directory structure needs validation'",
    "build:blockchain": "cd a2aNetwork && forge build",
    "lint": "npm run lint:js && npm run lint:python",
    "lint:js": "eslint . --ext .js,.ts --ignore-path .gitignore",
    "lint:python": "find . -name '*.py' -not -path './venv/*' -not -path './.venv/*' | xargs pylint",
    "security": "npm audit && safety check",
    "start:portal": "echo 'Portal start - directory structure needs validation'",
    "start:cap": "echo 'CAP start - directory structure needs validation'",
    "deploy:staging": "cf push a2a-portal-staging",
    "deploy:production": "cf push a2a-portal-production"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/plturrell/a2a-sap-network.git"
  },
  "keywords": [
    "sap",
    "cap",
    "ui5",
    "fiori",
    "blockchain",
    "agents",
    "ai",
    "automation",
    "enterprise"
  ],
  "author": "A2A Development Team",
  "license": "MIT",
  "devDependencies": {
    "eslint": "^8.55.0",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "prettier": "^3.1.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "jest-html-reporters": "^3.1.5",
    "jest-watch-typeahead": "^2.2.2",
    "cypress": "^13.6.0",
    "@sap/cds-jest": "^1.0.0",
    "babel-jest": "^29.7.0",
    "ts-jest": "^29.1.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.py": [
      "black",
      "flake8"
    ]
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
