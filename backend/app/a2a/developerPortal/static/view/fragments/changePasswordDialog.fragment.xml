<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.f">
    
    <Dialog title="Change Password" contentWidth="90%" maxWidth="35rem" class="a2a-tablet-dialog" resizable="false" draggable="false">
        <content>
            <VBox class="sapUiMediumMargin">
                <Label text="Current Password:" required="true" />
                <Input type="Password" placeholder="Enter current password" />
                
                <Label text="New Password:" required="true" class="sapUiSmallMarginTop" />
                <Input type="Password" placeholder="Enter new password" />
                
                <Label text="Confirm New Password:" required="true" class="sapUiSmallMarginTop" />
                <Input type="Password" placeholder="Confirm new password" />
                
                <Text text="Password requirements:" class="sapUiSmallMarginTop" />
                <VBox class="sapUiTinyMarginTop">
                    <Text text="• At least 8 characters long" class="sapUiTinyText" />
                    <Text text="• Contains uppercase and lowercase letters" class="sapUiTinyText" />
                    <Text text="• Contains at least one number" class="sapUiTinyText" />
                    <Text text="• Contains at least one special character" class="sapUiTinyText" />
                </VBox>
            </VBox>
        </content>
        <beginButton>
            <Button text="Change Password" type="Emphasized" press="onChangePasswordConfirm" />
        </beginButton>
        <endButton>
            <Button text="Cancel" press="onChangePasswordCancel" />
        </endButton>
    </Dialog>
</core:FragmentDefinition>
