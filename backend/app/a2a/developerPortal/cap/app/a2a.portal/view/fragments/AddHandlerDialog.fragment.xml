<Dialog 
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    title="Add Message Handler"
    contentWidth="90%"
    maxWidth="35rem"
    contentHeight="500px"
    class="a2a-tablet-dialog">
    <content>
        <VBox class="sapUiSmallMargin">
            <Label text="Handler Name:" required="true" />
            <Input id="handlerName" placeholder="e.g., processDataRequest" width="100%" />
            
            <Label text="Message Type:" class="sapUiSmallMarginTop" />
            <Select id="messageType" width="100%">
                <core:Item key="request" text="Request" />
                <core:Item key="response" text="Response" />
                <core:Item key="event" text="Event" />
                <core:Item key="command" text="Command" />
                <core:Item key="notification" text="Notification" />
            </Select>
            
            <Label text="Message Pattern:" class="sapUiSmallMarginTop" />
            <Input id="messagePattern" placeholder="e.g., data.process.*, *.error" width="100%" />
            
            <Label text="Priority:" class="sapUiSmallMarginTop" />
            <Slider id="handlerPriority" min="1" max="10" value="5" showHandleTooltip="true" width="100%" />
            
            <Label text="Handler Code Template:" class="sapUiSmallMarginTop" />
            <TextArea id="handlerCode" rows="10" width="100%" 
                value="async function handle(message, context) {\n    // Extract message data\n    const data = message.payload;\n    \n    // Process the message\n    // TODO: Add your logic here\n    \n    // Return response\n    return {\n        status: 'success',\n        result: data\n    };\n}" />
            
            <CheckBox id="handlerActive" text="Active" selected="true" class="sapUiSmallMarginTop" />
            <CheckBox id="handlerRetryOnError" text="Retry on error" />
        </VBox>
    </content>
    <beginButton>
        <Button text="Add" type="Emphasized" press=".onAddHandlerConfirm" />
    </beginButton>
    <endButton>
        <Button text="Cancel" press=".onAddHandlerCancel" />
    </endButton>
</Dialog>