# A2A Agents Environment Configuration Template
# Copy this file to .env and update with your values

# Environment
NODE_ENV=development
PORT=8080

# HANA Database Configuration (Local Development)
HANA_HOST=localhost
HANA_PORT=30015
HANA_USER=SYSTEM
HANA_PASSWORD=YourHanaPassword
HANA_DATABASE=A2A
HANA_SCHEMA=A2A_AGENTS
HANA_ENCRYPT=false

# Authentication (Local Development)
BYPASS_AUTH=true
XSUAA_URL=http://localhost:8080/uaa
XSUAA_CLIENT_ID=local-client
XSUAA_CLIENT_SECRET=local-secret
XSUAA_XSAPPNAME=a2a-agents-local

# Redis Cache (Optional)
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Blockchain Configuration (Optional)
# BLOCKCHAIN_RPC_URL=http://localhost:8545
# BLOCKCHAIN_PRIVATE_KEY=
# BLOCKCHAIN_CONTRACT_ADDRESS=

# API Keys (Optional)
# OPENAI_API_KEY=
# ANTHROPIC_API_KEY=

# Performance Settings
MAX_CONCURRENT_REQUESTS=100
REQUEST_TIMEOUT_MS=30000

# Feature Flags
ENABLE_METRICS=true
ENABLE_TRACING=false
ENABLE_CACHE=true

# Note: In BTP deployment, these values are automatically loaded from service bindings