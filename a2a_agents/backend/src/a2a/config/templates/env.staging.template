# A2A Network Configuration - STAGING
# Generated for staging environment

# Environment
A2A_ENVIRONMENT=staging

# Security (Production-like security with some flexibility)
A2A_PRIVATE_KEY_ENCRYPTED=true
A2A_USE_HARDWARE_WALLET=false
A2A_REQUIRE_HTTPS=true
A2A_ENABLE_RATE_LIMITING=true
A2A_MAX_REQUESTS_PER_MINUTE=100
A2A_ALLOWED_ORIGINS=https://staging.your-domain.com,https://test.your-domain.com
A2A_ENABLE_CORS=true

# Network (Testnet - Sepolia recommended)
A2A_NETWORK=sepolia
A2A_RPC_URL=https://sepolia.infura.io/v3/YOUR_INFURA_KEY
A2A_WS_URL=wss://sepolia.infura.io/ws/v3/YOUR_INFURA_KEY
A2A_CHAIN_ID=11155111
A2A_BLOCK_CONFIRMATIONS=3
A2A_GAS_STRATEGY=medium
A2A_MAX_GAS_PRICE=50.0
A2A_TIMEOUT_SECONDS=30

# Monitoring (Full monitoring for staging)
A2A_ENABLE_METRICS=true
A2A_METRICS_PORT=9090
A2A_LOG_LEVEL=INFO
A2A_LOG_FORMAT=json
A2A_ENABLE_TRACING=true
A2A_JAEGER_ENDPOINT=https://staging-jaeger.your-domain.com
A2A_ENABLE_HEALTH_CHECKS=true
A2A_HEALTH_CHECK_INTERVAL=30

# Contracts (REPLACE WITH ACTUAL TESTNET DEPLOYED ADDRESSES!)
# Deploy to Sepolia testnet first, then update these addresses
A2A_AGENT_REGISTRY_ADDRESS=0x5678901234567890123456789012345678901234
A2A_MESSAGE_ROUTER_ADDRESS=0x6789012345678901234567890123456789012345
A2A_ORD_REGISTRY_ADDRESS=0x7890123456789012345678901234567890123456
A2A_DEPLOYMENT_BLOCK=4500000
A2A_ENABLE_UPGRADES=true
A2A_PROXY_ADMIN_ADDRESS=0x8901234567890123456789012345678901234567

# Private Keys (REPLACE WITH ACTUAL TESTNET KEYS!)
# Generate with: python setup_cli.py generate-keys --environment staging
# Use testnet ETH - get from Sepolia faucet
A2A_AGENT_PRIVATE_KEY=0xabcdef1234567890abcdef1234567890abcdef1234567890abcdef1234567890

# Database (Staging database)
DATABASE_URL=postgresql://staging_user:staging_pass@staging-db:5432/a2a_staging

# Redis (Staging cache)
REDIS_URL=redis://staging-redis:6379

# Monitoring (Staging integrations)
SENTRY_DSN=https://staging-sentry-dsn@sentry.io/staging-project-id