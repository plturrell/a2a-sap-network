<core:FragmentDefinition 
    xmlns="sap.m" 
    xmlns:core="sap.ui.core">
    
    <Dialog id="createProjectDialog"
           title="{i18n>createProject}"
           contentWidth="30rem">
        
        <content>
            <VBox class="sapUiMediumMargin">
                <Label text="{i18n>projectName}" 
                       required="true" 
                       class="sapUiSmallMarginBottom"/>
                <Input id="createProjectName" 
                      value=""
                      placeholder="{i18n>enterProjectName}"
                      maxLength="50"
                      class="sapUiMediumMarginBottom"/>
                
                <Label text="{i18n>description}" 
                       class="sapUiSmallMarginBottom"/>
                <TextArea id="createProjectDescription"
                         value=""
                         placeholder="{i18n>enterDescription}"
                         rows="4"
                         maxLength="500"
                         class="sapUiMediumMarginBottom"/>
                
                <MessageStrip text="{i18n>projectCreationInfo}"
                            type="Information"
                            showIcon="true"/>
            </VBox>
        </content>
        
        <beginButton>
            <Button text="{i18n>create}"
                   type="Emphasized"
                   press="onCreateProjectConfirm"/>
        </beginButton>
        
        <endButton>
            <Button text="{i18n>cancel}"
                   press="onCreateProjectCancel"/>
        </endButton>
    </Dialog>
</core:FragmentDefinition>