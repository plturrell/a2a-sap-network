<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.ui.layout.form">
    
    <Dialog
        title="Add Webhook Subscription">
        
        <content>
            <f:SimpleForm
                editable="true"
                layout="ResponsiveGridLayout">
                
                <f:content>
                    <Label text="Event Type:" required="true" />
                    <Select
                        selectedKey="{newWebhook>/event_type}"
                        width="100%">
                        <items>
                            <core:repeat list="{webhooks>/eventTypes}" var="eventType">
                                <core:Item key="{eventType>key}" text="{eventType>text}" />
                            </core:repeat>
                        </items>
                    </Select>
                    
                    <Label text="Webhook URL:" required="true" />
                    <Input
                        value="{newWebhook>/webhook_url}"
                        type="Url"
                        placeholder="https://your-server.com/webhook"
                        valueLiveUpdate="true" />
                    
                    <Label text="Status:" />
                    <Switch
                        state="{newWebhook>/active}"
                        customTextOn="Active"
                        customTextOff="Paused" />
                </f:content>
            </f:SimpleForm>
        </content>
        
        <beginButton>
            <Button
                text="Subscribe"
                type="Emphasized"
                press=".onAddWebhookConfirm" />
        </beginButton>
        
        <endButton>
            <Button
                text="Cancel"
                press=".onAddWebhookCancel" />
        </endButton>
    </Dialog>
</core:FragmentDefinition>