{
  "name": "a2a-developer-portal-cap",
  "version": "1.0.0",
  "description": "A2A Developer Portal - SAP CAP Backend",
  "main": "server.js",
  "scripts": {
    "start": "cds-serve",
    "watch": "cds watch",
    "build": "cds build",
    "deploy": "cds deploy",
    "test": "jest",
    "lint": "eslint .",
    "audit": "npm audit",
    "dev": "cds watch --with-mocks --in-memory"
  },
  "dependencies": {
    "@sap/cds": "^7.5.0",
    "express": "^4.18.0",
    "passport": "^0.6.0",
    "helmet": "^7.0.0",
    "cors": "^2.8.5",
    "compression": "^1.7.4",
    "uuid": "^9.0.0",
    "joi": "^17.9.0",
    "winston": "^3.10.0",
    "redis": "^4.6.0"
  },
  "devDependencies": {
    "@sap/cds-dk": "^7.5.0",
    "@sap/eslint-plugin-cds": "^3.0.0",
    "@types/node": "^20.0.0",
    "eslint": "^8.45.0",
    "jest": "^29.6.0",
    "sqlite3": "^5.1.6"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "cds": {
    "requires": {
      "db": {
        "kind": "sqlite",
        "credentials": {
          "url": ":memory:"
        }
      },
      "auth": {
        "kind": "mocked"
      }
    },
    "build": {
      "target": ".",
      "tasks": [
        {
          "for": "hana",
          "dest": "../db"
        },
        {
          "for": "node-cf",
          "dest": "../srv"
        }
      ]
    },
    "hana": {
      "deploy-format": "hdbtable"
    },
    "odata": {
      "version": "v4"
    },
    "features": {
      "preserve_computed": true,
      "assert_integrity": "db"
    }
  },
  "sapux": [
    "app/a2a-portal"
  ]
}
