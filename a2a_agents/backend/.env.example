# Environment Configuration Template
# Copy this file to .env and fill in actual values
# DO NOT commit the actual .env file to version control

# Environment
ENVIRONMENT=development

# Server Configuration
HOST=0.0.0.0
PORT=8000
HOT_RELOAD=true

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/a2a_dev
DB_POOL_MIN_SIZE=5
DB_POOL_MAX_SIZE=20
DB_POOL_TIMEOUT=30
DB_SSL_MODE=prefer
DB_CONNECT_TIMEOUT=10
DB_COMMAND_TIMEOUT=30

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_MAX_CONNECTIONS=100
REDIS_TIMEOUT=5
REDIS_RETRY_ON_TIMEOUT=true
REDIS_HEALTH_CHECK_INTERVAL=30

# Security Configuration - CHANGE THESE IN PRODUCTION!
JWT_SECRET=your-super-secret-jwt-key-at-least-32-characters-long
JWT_ALGORITHM=HS256
JWT_EXPIRY_HOURS=24
JWT_REFRESH_EXPIRY_DAYS=7
PASSWORD_MIN_LENGTH=12
SESSION_TIMEOUT_MINUTES=30
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION_MINUTES=15

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://127.0.0.1:3000
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_HEADERS=Content-Type,Authorization,X-Requested-With
CORS_CREDENTIALS=true
CORS_MAX_AGE=3600

# SAP Configuration
SAP_GRAPH_URL=https://your-tenant.graph.sap.com/v1
SAP_GRAPH_CLIENT_ID=your-graph-client-id
SAP_GRAPH_CLIENT_SECRET=your-graph-client-secret
SAP_GRAPH_TENANT_ID=your-tenant-id
SAP_GRAPH_AUTH_URL=https://your-tenant.authentication.sap.hana.ondemand.com/oauth/token
SAP_HANA_URL=jdbc:sap://your-hana-instance:443
SAP_BTP_SUBDOMAIN=your-btp-subdomain
SAP_CLOUD_SDK_SERVICE_URL=https://your-cloud-sdk-service.cfapps.sap.hana.ondemand.com

# Agent Configuration
AGENT_TIMEOUT_SECONDS=30
AGENT_MAX_RETRIES=3
AGENT_RETRY_DELAY=2
AGENT_MAX_CONCURRENT=100
AGENT_HEALTH_CHECK_INTERVAL=30
AGENT_BATCH_SIZE=10

# Agent-specific timeouts
AGENT0_TIMEOUT=15
AGENT1_TIMEOUT=45
AGENT2_TIMEOUT=120
AGENT3_TIMEOUT=60
AGENT4_TIMEOUT=90
AGENT5_TIMEOUT=30

# External Services - ADD YOUR API KEYS
GROK_API_URL=https://api.x.ai/v1/chat/completions
GROK_API_KEY=your-grok-api-key
PERPLEXITY_API_URL=https://api.perplexity.ai
PERPLEXITY_API_KEY=your-perplexity-api-key
BLOOMBERG_API_URL=https://api.bloomberg.com
BLOOMBERG_API_KEY=your-bloomberg-api-key
REUTERS_API_URL=https://api.reuters.com
REUTERS_API_KEY=your-reuters-api-key

# External Service Configuration
EXTERNAL_API_TIMEOUT=30
EXTERNAL_API_RATE_LIMIT=60
CIRCUIT_BREAKER_THRESHOLD=5
CIRCUIT_BREAKER_TIMEOUT=60

# Monitoring and Telemetry
ENABLE_METRICS=true
ENABLE_TRACING=true
ENABLE_LOGGING=true
OTEL_ENDPOINT=http://localhost:4317
OTEL_SERVICE_NAME=a2a-agents
OTEL_SERVICE_VERSION=1.0.0
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE_MAX_SIZE=100
LOG_FILE_BACKUP_COUNT=5
METRICS_PORT=9090
METRICS_PATH=/metrics
HEALTH_CHECK_TIMEOUT=5
HEALTH_CHECK_INTERVAL=30

# Notifications
NOTIFICATION_PAGE_SIZE=20
NOTIFICATION_MAX_COUNT=1000
NOTIFICATION_RETENTION_DAYS=30
NOTIFICATION_BATCH_SIZE=100
NOTIFICATION_ERROR_THRESHOLD=10
NOTIFICATION_WARNING_THRESHOLD=25
NOTIFICATION_PERFORMANCE_THRESHOLD=1000

# UI Configuration
UI_DEFAULT_PAGE_SIZE=20
UI_MAX_PAGE_SIZE=100
UI_API_TIMEOUT_MS=30000
UI_CHART_TIMEOUT_MS=10000
UI_UPLOAD_TIMEOUT_MS=300000
UI_MAX_FILE_SIZE_MB=50
UI_MAX_CONCURRENT_UPLOADS=3
UI_ENABLE_DARK_MODE=true
UI_ENABLE_ANALYTICS=false
UI_ENABLE_DEBUG=false

# Production-only settings (set these in production environment)
# REQUIRE_HTTPS=true
# ENABLE_SECURITY_HEADERS=true
# ENABLE_RATE_LIMITING=true
# MAX_REQUEST_SIZE_MB=10
# ENABLE_AUDIT_LOGGING=true

