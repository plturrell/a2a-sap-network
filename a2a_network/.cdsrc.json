{
    "build": {
        "target": ".",
        "tasks": [
            {
                "for": "hana",
                "dest": "../db"
            },
            {
                "for": "node-cf",
                "src": "srv"
            }
        ]
    },
    "requires": {
        "db": {
            "kind": "hana-cloud",
            "model": ["db/", "srv/"],
            "[development]": {
                "kind": "hana-cloud",
                "credentials": {
                    "host": "localhost",
                    "port": 30015,
                    "database": "A2A_DEV",
                    "user": "SYSTEM",
                    "password": "manager"
                }
            },
            "[production]": {
                "kind": "hana-cloud"
            }
        },
        "supabase": {
            "kind": "rest",
            "credentials": {
                "url": "${SUPABASE_URL}",
                "key": "${SUPABASE_ANON_KEY}"
            }
        },
        "messaging": false,
        "multitenancy": false,
        "extensibility": false,
        "destinations": false,
        "connectivity": false,
        "html5-repo": false,
        "portal": false,
        "workflow": false,
        "approuter": false,
        "audit-log": false
    },
    "hana": {
        "deploy-format": "hdbtable"
    },
    "features": {
        "fiori_preview": true,
        "in_memory_cache": true,
        "serve_static": true
    },
    "odata": {
        "version": "v4",
        "containment": true,
        "flavors": ["x4", "w4"]
    },
    "fiori": {
        "preview": {
            "ui5": {
                "version": "latest"
            }
        }
    },
    "log": {
        "levels": {
            "blockchain": "info",
            "websocket": "info"
        }
    }
}