{
  "name": "a2a-portal-ui",
  "version": "1.0.0",
  "description": "SAP UI5 Frontend for A2A Agent Portal",
  "private": true,
  "scripts": {
    "start": "ui5 serve --open index.html",
    "start:mock": "ui5 serve --config ui5-mock.yaml --open index.html",
    "build": "ui5 build --clean-dest",
    "build:opt": "ui5 build self-contained --clean-dest --all",
    "test": "npm run lint && npm run test:unit && npm run test:integration",
    "test:unit": "karma start",
    "test:integration": "npm run test:opa5",
    "test:opa5": "ui5 test --framework-options config:karma-ci.conf.js",
    "lint": "eslint webapp",
    "lint:fix": "eslint webapp --fix",
    "ts-typecheck": "tsc --noEmit",
    "precommit": "npm run lint && npm run ts-typecheck",
    "deploy": "npm run build && fiori deploy",
    "deploy:config": "fiori add deploy-config",
    "undeploy": "fiori undeploy",
    "start:dist": "ui5 serve --open index.html --config ui5-dist.yaml"
  },
  "keywords": [
    "SAP",
    "UI5",
    "Fiori",
    "OpenUI5",
    "A2A"
  ],
  "author": "SAP SE",
  "license": "Apache-2.0",
  "devDependencies": {
    "@sap/ux-ui5-tooling": "^1.12.0",
    "@sap/ui5-builder-webide-extension": "^1.1.9",
    "@sapui5/ts-types": "~1.120.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "@ui5/cli": "^3.7.1",
    "@ui5/fs": "^3.0.5",
    "@ui5/logger": "^3.0.0",
    "eslint": "^8.56.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.29.1",
    "karma": "^6.4.2",
    "karma-chrome-launcher": "^3.2.0",
    "karma-coverage": "^2.2.1",
    "karma-ui5": "^3.0.3",
    "typescript": "^5.3.3",
    "ui5-middleware-livereload": "^3.0.2",
    "ui5-tooling-modules": "^3.2.0",
    "ui5-tooling-transpile": "^3.2.7"
  },
  "dependencies": {
    "@sap/cds": "^7.5.2",
    "@sap-cloud-sdk/core": "^1.54.2",
    "@sap-cloud-sdk/generator": "^3.11.0"
  },
  "ui5": {
    "dependencies": [
      "@sap/ui5-builder-webide-extension",
      "ui5-middleware-livereload",
      "ui5-tooling-transpile",
      "ui5-tooling-modules"
    ]
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}