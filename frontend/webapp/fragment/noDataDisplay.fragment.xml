<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.f">
    
    <!-- SAP Fiori Compliant No Data Display -->
    <VBox
        alignItems="Center"
        justifyContent="Center"
        class="sapUiMediumMargin"
        visible="{= !${/Projects} || ${/Projects/length} === 0}">
        
        <!-- Illustrated Message for No Data -->
        <f:IllustratedMessage
            id="noDataIllustratedMessage"
            illustrationType="sapIllus-NoData"
            title="{i18n>projects.noProjects}"
            description="{i18n>projects.noProjects.description}">
            
            <!-- Additional Actions -->
            <f:additionalContent>
                <VBox alignItems="Center" class="sapUiMediumMarginTop">
                    <Button
                        text="{i18n>projects.create}"
                        type="Emphasized"
                        icon="sap-icon://add"
                        press="onCreateProject"
                        class="sapUiMediumMarginBottom"/>
                    
                    <HBox>
                        <Button
                            text="{i18n>btn.import}"
                            icon="sap-icon://upload"
                            press="onImportProject"
                            class="sapUiSmallMarginEnd"/>
                        
                        <Button
                            text="{i18n>projects.template.browse}"
                            icon="sap-icon://browse-folder"
                            press="onBrowseTemplates"/>
                    </HBox>
                </VBox>
            </f:additionalContent>
        </f:IllustratedMessage>
        
        <!-- Quick Start Tips -->
        <Panel
            expanded="false"
            expandable="true"
            headerText="{i18n>projects.quickStart.title}"
            class="sapUiMediumMarginTop"
            width="100%"
            maxWidth="600px">
            
            <content>
                <VBox class="sapUiMediumMargin">
                    <MessageStrip
                        text="{i18n>projects.quickStart.tip1}"
                        type="Information"
                        showIcon="true"
                        class="sapUiSmallMarginBottom"/>
                    
                    <MessageStrip
                        text="{i18n>projects.quickStart.tip2}"
                        type="Success" 
                        showIcon="true"
                        class="sapUiSmallMarginBottom"/>
                    
                    <MessageStrip
                        text="{i18n>projects.quickStart.tip3}"
                        type="Warning"
                        showIcon="true"/>
                </VBox>
            </content>
        </Panel>
    </VBox>
</core:FragmentDefinition>